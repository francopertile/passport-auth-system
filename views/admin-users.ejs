<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Panel Admin - Usuarios</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body { background-color: #f8f9fa; }
    .table { background-color: #fff; }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Auth System (Admin)</a>
      <div class="d-flex">
        <button onclick="window.location.href='/'" class="btn btn-outline-light">Volver al inicio</button>
      </div>
    </div>
  </nav>

  <div class="container py-5 flex-grow-1">
    <h1 class="text-center mb-4">Panel de Administración de Usuarios</h1>
    <div class="table-responsive shadow rounded bg-white p-3">
      <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><small><%= user.id %></small></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td>
                <select class="form-select form-select-sm w-auto" data-user-id="<%= user.id %>">
                  <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>Usuario</option>
                  <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                </select>
              </td>
              <td>
                <% if (user.role !== 'admin') { %>
                  <button class="btn btn-sm btn-danger" data-user-id="<%= user.id %>">Eliminar</button>
                <% } else { %>
                  <span class="text-muted small">—</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <small>Auth System Challenge</small>
  </footer>

  <script>
    // (Req: CSRF) Pasamos el token a nuestro script de admin
    const csrfToken = '<%= csrfToken %>';
  </script>
  <script src="/js/admin.js" defer></script>
</body>
</html>